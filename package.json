{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "devDependencies": {
    "husky": "^4.2.1",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.3",
    "standard": "^14.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": ["npm run lint:fix"]
  }
}
